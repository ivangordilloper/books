        <!-- One -->
        <section id="one" class="wrapper style1 special" style="padding: 20px">
            <div class="inner">
                <header class="major">
                    <h2 style="padding-top: 20px">¿Quiénes somos?</h2> <br/>
                    <p style="color: #ffffff"> <b>BOOKSCOM</b> es la red social para lectores cuya misión es ayudarte a encontrar los libros y autores que más se acerquen a tus preferencias.</p>
                </header>
            </div>
        </section>

        <!-- Two -->
        <section id="two" class="wrapper alt style2">
