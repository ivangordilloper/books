        <!-- Banner -->
        <section id="banner">
            <div class="inner">
                <h2>BooksCom</h2>
                <p>Conéctate con tus amigos.<br />
                    <br />

                <ul class="actions">
                    <li><a href="/inicio/iniciarSesion" class="button special">INICIAR SESIÓN</a></li>
